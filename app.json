{
  "expo": {
    "name": "BugBook - My Insect Guide",
    "slug": "bugbook-insect-guide",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "bugbook",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "backgroundColor": "#E8F5E8",
    "primaryColor": "#2E7D32",
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "BugBook needs camera access to photograph insects for your field guide.",
        "NSPhotoLibraryUsageDescription": "BugBook needs photo library access to select insect photos for your field guide.",
        "NSLocationUsageDescription": "BugBook uses location to record where you found insects."
      }
    },
    "android": {
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "bundler": "webpack",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router", 
      "expo-font", 
      "expo-web-browser",
      "expo-camera",
      "expo-location",
      "expo-sqlite"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}